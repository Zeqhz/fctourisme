{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container alert alert-secondary p-5">
        <h1>Inscription</h1>
        <div class="d-flex justify-content-center">
            <div class="row mt-5 ">
                {{ form_start(registrationForm) }}

                <h2 class="h4 mt-3">Pseudonyme</h2>

                <div class="col-12 mt-1">

                    {{ form_row(registrationForm.pseudo) }}

                </div>
                <h2 class="h4 mt-3">Email</h2>

                <div class="col-12 mt-1">

                    {{ form_row(registrationForm.email) }}

                </div>
                <h2 class="h4 mt-3">Nom</h2>

                <div class="col-12 mt-1">

                    {{ form_row(registrationForm.nom) }}

                </div>
                <h2 class="h4 mt-3">Pr√©nom</h2>

                <div class="col-12  mt-1">

                    {{ form_row(registrationForm.prenom) }}

                </div>
                <h2 class="h4 mt-3">Mot de Passe</h2>
                <div class="col-12  mt-1">

                    {{ form_row(registrationForm.password) }}

                </div>

                <button type="submit" class="btn btn-primary d-flex mx-auto mt-5 ">Enregistrer</button>

                {{ form_end(registrationForm) }}
            </div>

        </div>
    </section>
{% endblock %}